<h1>MAIN</h1>

<div class="card-deck container-fluid">
  <div class="row d-flex flex-wrap">
    {{#each cards}}
    <div class="mycard col-4">
      <div class="card-body">
        <div class="volume-icon"><button class="btn-volume-icon"><img src="../images/audio.png"
              alt="text-to-speech"></button></div>
        <h3 class="card-title"> {{phrase}} </h3>
      </div>
      <div class="thumbsup-icon">
        <form action="/main/{{_id}}" method="POST">
           <button type="submit" class="btn-thumbsup-icon"><img src="../images/thumbs_up.png"
            alt="like-button"></button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
</div>