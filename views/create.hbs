    <label for="exampleFormControlInput1" >Phrase</label>
    <textarea class="form-control" name="phrase" rows="2" required></textarea>
  </div>
   <div class="form-group">
    <label for="exampleFormControlSelect1" >Translation</label>
     <textarea class="form-control" name="translation" rows="2" required></textarea>
