  <script>
    function filter(){
      let searchParameter;
      if (document.getElementsByClassName('search-bar')[0].value) {
        searchParameter = document.getElementsByClassName('search-bar')[0].value;
      } else {
        searchParameter = document.getElementsByClassName('search-bar')[1].value;
      }
    
    //palavra a procurar
    
    let titleElements = document.getElementsByClassName('mycard-title'); //array de elementos com classe card-title <h3>titulos</h3>

    for(let i = 0; i < titleElements.length; i++){ //iterar cada titulo

      let card = titleElements[i].parentElement; //ir buscar o elemento pai do titulo
      let cardElement = card.parentElement; //ir buscar o avó do titulo
      let title = titleElements[i].innerText; //buscar ao elemento titulo o seu texto (o que está realmente dentro do h3)
      let titleArray = title.split(' '); //fazer split to texto para um array
      let searchToUpper = searchParameter.toUpperCase(); //passar o texto a procurar para CAPS
      let found = false; //variável auxiliar para saber se encontrámos match, inicializada a false porque a cada novo título partimos do princípio que não houve match
      for(let k = 0; k < titleArray.length; k++){ //iterar cada palavra do título
        let titleToUpper = titleArray[k].toUpperCase(); //passar a palavra a CAPS
        if(titleToUpper.includes(searchToUpper)){ //comparar cada palavra com o texto a procurar
          found = true; //se houver match variável auxiliar passa a true
          cardElement.style.display = 'block'; //o elemento avó fica com display block (visível)
          break; //break para sair do loop e continuar o código -> if(!found)
        }
      }
      if(!found){ //se não tiver existido match
      cardElement.style.display = 'none'; //esconder o avó alterando a propriedade display para none
      
      }
      
    }
    
  }
  </script>
